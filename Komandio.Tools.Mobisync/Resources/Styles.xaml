<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:models="clr-namespace:Komandio.Tools.Mobisync.Models">

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <Style x:Key="StatLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource TextDimBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="StatValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{StaticResource TextMainBrush}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="ModuleTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextDimBrush}" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>

    <!-- Shared Event Template -->
    <DataTemplate x:Key="EventRowTemplate" DataType="{x:Type models:LogEventViewModel}">
        <Grid Margin="0,0,24,8">
            <Border x:Name="HoverBorder" CornerRadius="12" BorderBrush="Transparent" BorderThickness="1" Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border x:Name="IconBox" Width="40" Height="40" CornerRadius="10" Background="#141622"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <ui:SymbolIcon Symbol="{Binding Icon}" Foreground="{Binding IconColor}" FontSize="18" />
                    </Border>

                    <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Title}" FontSize="12" FontWeight="Black"
                                           Foreground="{StaticResource TextMainBrush}" />
                                <Border Background="#1a5e5ce6" CornerRadius="4" Padding="4,1" Margin="8,0,0,0" VerticalAlignment="Center" x:Name="CountBadge">
                                    <TextBlock Text="{Binding Count, StringFormat='({0})'}" Foreground="{StaticResource AccentBlueBrush}" FontSize="9" FontWeight="Black"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding TimeString}" HorizontalAlignment="Right"
                                       Foreground="{StaticResource TextDimBrush}" FontSize="9" FontFamily="Consolas" />
                        </Grid>
                        <TextBlock Text="{Binding Description}" FontSize="11" Foreground="{StaticResource TextSlateBrush}"
                                   FontFamily="Consolas" Margin="0,2,0,0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Count}" Value="1">
                <Setter TargetName="CountBadge" Property="Visibility" Value="Collapsed" />
            </DataTrigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="HoverBorder" Property="Background" Value="#0dffffff" />
                <Setter TargetName="HoverBorder" Property="BorderBrush" Value="#1a5e5ce6" />
            </Trigger>
            <DataTrigger Binding="{Binding Category}" Value="KILLS">
                <Setter TargetName="IconBox" Property="Background" Value="#1aef4444" />
                <Setter TargetName="IconBox" Property="BorderBrush" Value="#4def4444" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>