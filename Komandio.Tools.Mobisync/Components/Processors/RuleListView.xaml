<UserControl x:Class="Komandio.Tools.Mobisync.Components.Processors.RuleListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Komandio.Tools.Mobisync.Converters"
             xmlns:processors="clr-namespace:Komandio.Tools.Mobisync.Components.Processors"
             d:DataContext="{d:DesignInstance processors:RuleListViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Border Style="{StaticResource CardStyle}" Padding="16">
        <DockPanel>
            <Grid DockPanel.Dock="Top" Margin="0,0,0,24">
                <TextBlock Text="RULE DEFINITIONS" Style="{StaticResource ModuleTitleStyle}" VerticalAlignment="Center" Margin="0"/>
                <ui:Button Command="{Binding AddRuleCommand}" Icon="{ui:SymbolIcon Add24}" Appearance="Primary" HorizontalAlignment="Right" Width="32" Height="32" Padding="0"/>
            </Grid>
            <ScrollViewer MaxHeight="550" VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding Rules}" SelectedItem="{Binding SelectedRule}" 
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,24,8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="OuterBorder" CornerRadius="12" BorderBrush="Transparent" BorderThickness="1" 
                                                Background="#33000000" Padding="12" Cursor="Hand" SnapsToDevicePixels="True">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border x:Name="IconBox" Width="36" Height="36" CornerRadius="8" 
                                                        Background="#1e293b" BorderBrush="#334155" BorderThickness="1">
                                                    <ui:SymbolIcon x:Name="ItemIcon" Symbol="{Binding Icon}" FontSize="16" Foreground="#64748b"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock x:Name="NameText" Text="{Binding Name}" FontWeight="Bold" FontSize="12" 
                                                               Foreground="{StaticResource TextMainBrush}"/>
                                                </StackPanel>

                                                <ui:SymbolIcon Grid.Column="2" Symbol="CheckmarkCircle24" Foreground="{StaticResource AccentBlueBrush}" 
                                                               Opacity="0.4" FontSize="14" Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#475569"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="OuterBorder" Property="Background" Value="#1a5e5ce6"/>
                                                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#805e5ce6"/>
                                                <Setter TargetName="IconBox" Property="BorderBrush" Value="#60a5fa"/>
                                                <Setter TargetName="ItemIcon" Property="Foreground" Value="#60a5fa"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
