<UserControl x:Class="Komandio.Tools.Mobisync.Components.Processors.RegexGuideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:processors="clr-namespace:Komandio.Tools.Mobisync.Components.Processors"
             d:DataContext="{d:DesignInstance processors:RegexGuideViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d">
    <Border CornerRadius="16" Background="#0a0b10" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" ClipToBounds="True">
        <DockPanel>
            <Border DockPanel.Dock="Top" Padding="16" Background="#1a5e5ce6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Book24" Foreground="{StaticResource AccentBlueBrush}" FontSize="16"/>
                    <TextBlock Text="REGEX CAPTURE GUIDE" FontSize="10" FontWeight="Black" Foreground="#93c5fd" Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16,16,36,16">
                    <StackPanel Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="Lightbulb24" Foreground="#eab308" FontSize="14"/>
                            <TextBlock Text="HOW IT WORKS" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Surround the part of the log you want to extract with parentheses (...). These are 'Capture Groups'." 
                                   FontSize="12" Foreground="{StaticResource TextSlateBrush}" TextWrapping="Wrap" FontStyle="Italic"/>
                        <Border Margin="0,12,0,0" Background="#1a000000" CornerRadius="8" Padding="12" BorderBrush="#1a334155" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Example: Handle\[([^\]]+)\]" FontSize="11" FontFamily="Consolas" Foreground="{StaticResource AccentBlueBrush}"/>
                                <TextBlock Text="This grabs everything inside the brackets []." FontSize="10" Foreground="{StaticResource TextSlateBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <ui:SymbolIcon Symbol="Copy24" Foreground="{StaticResource AccentBlueBrush}" FontSize="14"/>
                            <TextBlock Text="TEMPLATES" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Use {}{1} for the 1st group, {}{2} for the 2nd, and so on." 
                                   FontSize="12" Foreground="{StaticResource TextSlateBrush}" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="PRO SAMPLES" FontSize="11" FontWeight="Black" Foreground="{StaticResource TextSlateBrush}" Margin="0,0,0,12" Opacity="0.6"/>
                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="HANGAR STATUS" FontSize="11" FontWeight="Bold" Foreground="#93c5fd" Margin="0,0,0,6"/>
                            <Border Background="#0d000000" CornerRadius="8" Padding="10">
                                <StackPanel>
                                    <TextBlock FontSize="10" FontFamily="Consolas" Foreground="{StaticResource TextSlateBrush}">
                                        <Run Text="Pattern: "/><Run Text="State changed to (\w+)" Foreground="{StaticResource AccentEmeraldBrush}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" FontFamily="Consolas" Foreground="{StaticResource TextSlateBrush}" Margin="0,2,0,0">
                                        <Run Text="Output: "/><Run Text="Elevator is {}{1}" Foreground="{StaticResource AccentBlueBrush}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="ENTITY STREAMING" FontSize="11" FontWeight="Bold" Foreground="#93c5fd" Margin="0,0,0,6"/>
                            <Border Background="#0d000000" CornerRadius="8" Padding="10">
                                <StackPanel>
                                    <TextBlock FontSize="10" FontFamily="Consolas" Foreground="{StaticResource TextSlateBrush}">
                                        <Run Text="Pattern: "/><Run Text="spawned (\d+) entities" Foreground="{StaticResource AccentEmeraldBrush}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" FontFamily="Consolas" Foreground="{StaticResource TextSlateBrush}" Margin="0,2,0,0">
                                        <Run Text="Output: "/><Run Text="Loaded {}{1} items" Foreground="{StaticResource AccentBlueBrush}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="DESTINATION SYNC" FontSize="11" FontWeight="Bold" Foreground="#93c5fd" Margin="0,0,0,6"/>
                            <Border Background="#0d000000" CornerRadius="8" Padding="10">
                                <StackPanel>
                                    <TextBlock FontSize="10" FontFamily="Consolas" Foreground="{StaticResource TextSlateBrush}">
                                        <Run Text="Pattern: "/><Run Text="\[(\d+)\] destinations received" Foreground="{StaticResource AccentEmeraldBrush}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" FontFamily="Consolas" Foreground="{StaticResource TextSlateBrush}" Margin="0,2,0,0">
                                        <Run Text="Output: "/><Run Text="{}{1} destinations available" Foreground="{StaticResource AccentBlueBrush}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
