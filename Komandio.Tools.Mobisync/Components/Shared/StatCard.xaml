<UserControl x:Class="Komandio.Tools.Mobisync.Components.Shared.StatCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Komandio.Tools.Mobisync.Converters"
             d:DesignHeight="100" d:DesignWidth="200"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ValueToFontSizeConverter x:Key="ValueToFontSizeConverter"/>
    </UserControl.Resources>
    <Border Background="#141622" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10">
        <Grid>
            <!-- Background Icon -->
            <ui:SymbolIcon Symbol="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="{Binding IconColor, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           FontSize="24" Opacity="0.4" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=TITLE}" 
                           FontSize="9" FontWeight="Black" Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,4"/>
                <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=A VERY LONG VALUE WHICH WRAPS ON ITS END}" 
                           FontSize="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource ValueToFontSizeConverter}}" 
                           FontWeight="Black" Foreground="{StaticResource TextMainBrush}" 
                           TextWrapping="WrapWithOverflow" MaxHeight="45" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
