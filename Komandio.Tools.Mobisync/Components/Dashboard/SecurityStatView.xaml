<UserControl x:Class="Komandio.Tools.Mobisync.Components.Dashboard.SecurityStatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Komandio.Tools.Mobisync.Converters"
             xmlns:shared="clr-namespace:Komandio.Tools.Mobisync.Components.Shared"
             xmlns:dashboard="clr-namespace:Komandio.Tools.Mobisync.Components.Dashboard"
             d:DataContext="{d:DesignInstance dashboard:SecurityStatViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="100" d:DesignWidth="200"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Grid>
        <shared:StatCard Icon="Shield24" Label="SECURITY" Value="ARMISTICE" IconColor="#06b6d4" 
                         Visibility="{Binding IsInArmistice, Converter={StaticResource BoolToVis}}"/>
        <shared:StatCard Icon="ShieldDismiss24" Label="SECURITY" Value="UNRESTRICTED" IconColor="{StaticResource TextSlateBrush}" 
                         Visibility="{Binding IsInArmistice, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}"/>
    </Grid>
</UserControl>
