<UserControl x:Class="Komandio.Tools.Mobisync.Components.Dashboard.StatsBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dashboard="clr-namespace:Komandio.Tools.Mobisync.Components.Dashboard"
             d:DesignHeight="80" d:DesignWidth="800"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <dashboard:LocationStatView Grid.Column="0" Margin="0,0,12,0"/>
        <dashboard:SecurityStatView Grid.Column="1" Margin="12,0,12,0"/>
        <dashboard:KillsStatView Grid.Column="2" Margin="12,0,12,0"/>
        <dashboard:VehicleStatView Grid.Column="3" Margin="12,0,12,0"/>
        <dashboard:MissionStatView Grid.Column="4" Margin="12,0,0,0"/>
    </Grid>
</UserControl>